<h2>Forgot your password?</h2>

<div class="container cen text-center">
<%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
<% if @model.errors.any? %>
  <div class="text-danger">
    <ul>
      <% @model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group cen text-center" style="width: 50%;">
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true, :class => 'form-control' %>
  </p>

    <%= f.submit "Send me reset password instructions", :class => 'btn btn-success' %>
</div>
<% end %>
</div>
