<!DOCTYPE html>
<html>
  <head>
    <title>NoteManager</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style type="text/css">
      body { background: #b0b3b7 !important; } /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
    </style>
  </head>

  <body>
  <%= render 'layouts/nav' %>
  <div class="container text-center">
    <%= yield %>
  </div>
  </body>
</html>
